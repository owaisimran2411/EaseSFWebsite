<div class="product-container">
    <div class="product-image">
        <img src="{{product.coverImage}}" alt="{{product.name}}">
    </div>

    <div class="product-details">
        <h2>{{product.name}}</h2>

        <div class="rating">
            <span class="stars"><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i
                    class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i></span>
        </div>

        <p>Category: {{product.category}}</p>

        {{!-- <p class="per-strip">ðŸ”˜ Per Strip</p> --}}

        <div class="delivery-box">
            <span>Expected time 1 hour </span>
            <span class="quick-delivery">QUICK DELIVERY</span>
        </div>

        <div class="product-description">
            {{{product.description}}}
        </div>

        <div class="price-cart">
            <div class="price">
                <span class="current-price">${{product.price}}</span>
                {{!-- <span class="old-price">Rs. 35.24</span> --}}
            </div>
            <button class="add-to-cart">ADD TO CART</button>
        </div>
    </div>
</div>
</div>
